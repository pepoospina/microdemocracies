{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src/index.ts"],
  "exclude": ["src/__e2e_test__/**.*"]
}
