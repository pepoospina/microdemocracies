{
  "name": "@microdemocracies/registry-contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "chain": "hardhat node --network hardhat",
    "test": "hardhat test --network hardhat",
    "compile": "rm -rf ./build && mkdir ./build && hardhat compile --force && yarn generate",
    "generate": "wagmi generate",
    "deploy": "npx hardhat ignition deploy ignition/modules/RegistryFactory.ts",
    "export": "./export.generated.sh",
    "verify": "hardhat etherscan-verify",
    "lint": "eslint --config ./.eslintrc --ignore-path ./.eslintignore ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts ./helpers/**/*.ts",
    "solhint": "solhint ./contracts/**/*.sol",
    "format": "yarn prettier -w ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts ./helpers/**/*.ts contracts/**/*.sol ",
    "format:check": "yarn prettier -c ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts ./helpers/**/*.ts ./contracts/**/*.sol "
  },
  "dependencies": {
    "@atixlabs/hardhat-time-n-mine": "^0.0.5",
    "@defi-wonderland/smock": "^2.0.7",
    "@eth-optimism/hardhat-ovm": "^0.2.4",
    "@ethereum-waffle/ens": "^3.3.1",
    "@ethereumjs/vm": "^5.7.1",
    "@nomicfoundation/hardhat-viem": "^1.0.0",
    "@openzeppelin/contracts": "^4.5.0",
    "@prb/math": "^4.0.1",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "canonical-json": "0.0.4",
    "cbor-js": "^0.1.0",
    "chalk": "^4.1.2",
    "cids": "^1.1.9",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.11.2",
    "hardhat-deploy": "^0.9.29",
    "ipfs-http-client": "^54.0.2",
    "multihashing-async": "^2.1.4",
    "prb-math": "^2.4.3",
    "qrcode-terminal": "^0.12.0",
    "solidity-coverage": "^0.8.5",
    "viem": "^1.18.9",
    "web-streams-polyfill": "^3.2.1",
    "web3.storage": "^4.5.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
